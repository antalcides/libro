\newcommand{\polygon}[2]{%
  let \n{len} = {2*#2*tan(360/(2*#1))} in
 ++(0,-#2) ++(\n{len}/2,0) \foreach \x in {1,...,#1} { -- ++(\x*360/#1:\n{len})}}
\begin{tikzpicture}[scale=0.5, media/.style={font={\tiny \sffamily}}]
\foreach \a in {3,...,10}{
\draw[blue,dashed] (\a*4,0) circle (1.3cm);
\draw (\a*4,0) \polygon{\a}{1.3};
\draw[color=blue,media](\a*4,0) node[below =1pt] {$n=\a$};
 }
\end{tikzpicture}
