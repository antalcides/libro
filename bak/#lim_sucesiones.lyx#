\begin_inset Formula $a,b,c,d>0$
\end_inset

 y, 
\begin_inset Formula $a>b,\;c<d$
\end_inset

 entonces 
\begin_inset Formula $\frac{a\cdot}{c}>\frac{b}{d}$
\end_inset

, o si 
\begin_inset Formula $a,b,c,d>0$
\end_inset

 y, 
\begin_inset Formula $a<b,\;c>d$
\end_inset

 entonces 
\begin_inset Formula $\frac{a\cdot}{c}<\frac{b}{d}$
\end_inset

